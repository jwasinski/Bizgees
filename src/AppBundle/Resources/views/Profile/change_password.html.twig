<form role="form" id="form_change_password" action="{{ path('my_profile') }}" method="POST">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Change Password</h4> </div>
    <div class="modal-body">
		<div class="row">
			<div class="col-sm-12">
				<div class="form-group">
					<label>Old Password *</label>
					<input type="password" name="" value="" class="form-control " required="required">
				</div>
				<div class="form-group">
					<label>New Password *</label>
					<input type="password" name="" value="" class="form-control " required="required">
				</div>
				<div class="form-group">
					<label>New Password Confirm *</label>
					<input type="password" name="" value="" class="form-control " required="required">
				</div>
				<button type="submit" name="" class="btn btn-primary btn-lg" required="required">Save</button>
			</div>
		</div>
    </div>
</form>