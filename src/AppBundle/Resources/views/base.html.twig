<script src="{{ asset('bundles/app/js/owl.carousel.js') }}"></script>
<script src="{{ asset('bundles/app/js/bootstrap-hover-dropdown.js') }}"></script>
<script src="{{ asset('bundles/app/js/modernizr.js') }}"></script>
